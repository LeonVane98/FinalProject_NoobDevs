<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen_estiramiento">

    <TextView
        android:id="@+id/tv_Estiramiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Estiramiento"
        android:textColor="#00B9D2"
        android:textSize="55sp"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_estiramientodeBicep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A546C"
        android:text="Estiramiento de Biceps"
        app:layout_constraintTop_toBottomOf="@id/btn_estiramientoCuello"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>

    <Button
        android:id="@+id/btn_estiramientoCuello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#1A546C"
        android:text="Estiramientos de Cuello"
        app:layout_constraintTop_toBottomOf="@+id/btn_estiramientoCadera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>

    <Button
        android:id="@+id/btn_estiramientoCadera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A546C"
        android:text="Estiramientos de Cadera"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Estiramiento"
        android:layout_marginTop="110dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>