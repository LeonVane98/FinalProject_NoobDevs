<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estiramiento_cadera">

    <TextView
        android:id="@+id/tv_Estiramiento1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-medium"
        android:text="Estiramiento #1"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Introduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/cardview_light_background"
        android:text="Este segundo ejercicio se puede realizar sentado o de pie."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_Estiramiento1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <ImageView
        android:id="@+id/img_Estiramiento1"
        android:layout_width="491dp"
        android:layout_height="256dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_Introduccion"
        app:srcCompat="@drawable/estiramientos_cadera_adulto"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_IndicacionEstiramiento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:background="@color/cardview_light_background"
        android:text="Esta parte de estiramiento consiste en, llevar los brazos hacia al frente ya sea de manera sentada o de pie, usted tratara de tocar la punta de su pie."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/img_Estiramiento1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_estiramiento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hecho"
        app:layout_constraintTop_toBottomOf="@id/txt_IndicacionEstiramiento1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#2A25CC"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>

