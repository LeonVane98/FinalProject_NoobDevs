<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estiramiento_cuello">


    <TextView
        android:id="@+id/tv_Estiramiento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-medium"
        android:text="Estiramiento #2"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_Estiramiento2"
        android:layout_width="468dp"
        android:layout_height="187dp"
        app:layout_constraintHorizontal_bias="0.508"
        app:srcCompat="@drawable/segundo_estiramiento"
        app:layout_constraintTop_toBottomOf="@id/txt_Indicacion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/txt_Indicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:background="@color/cardview_light_background"
        android:text="Este segundo estiramiento consiste en aliviar dolores de cuello y prevenirlos."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_Estiramiento1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_Indicacion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:background="@color/cardview_light_background"
        android:text="Con nuestro brazo derecho tomaremos nuestra cabeza y la moveremos al lado derecho durante 10 segundos, luego realizamos el mismo procedimiento solo que al lado izquierdo."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/img_Estiramiento2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_Est2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:backgroundTint="#2A25CC"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_Indicacion2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>