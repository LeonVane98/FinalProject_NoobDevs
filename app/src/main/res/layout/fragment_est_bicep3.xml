<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_mancuerna">


    <TextView
        android:id="@+id/tv_Ejercicio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-medium"
        android:text="Ejercicio #3"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Introduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:background="@color/cardview_light_background"
        android:text="Este se consigue estirar los brazos, y se puede realizar de pie o sentado."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_Ejercicio3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:id="@+id/img_Ejercicio3"
        android:layout_width="491dp"
        android:layout_height="256dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/estiramiento_ejercicio3bicep"
        app:layout_constraintTop_toBottomOf="@id/txt_Introduccion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_IndicacionBicep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:layout_marginTop="4dp"
        android:background="@color/cardview_light_background"
        android:text="Levanta el brazo derecho y mantén el hombro izquierdo hacia abajo. Con el brazo estirado, baja la mano dereha hacia tu espalda suavemente. A continuación lleva tu mano izquierda hacia el codo derecho, colocando los dedos encima de este. Manten ésta posición hasta 30 segundos y repite 4 veces."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/img_Ejercicio3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_Ejer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:backgroundTint="#2A25CC"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_IndicacionBicep3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>