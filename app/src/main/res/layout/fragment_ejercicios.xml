<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen_estiramiento"
    tools:context=".ejercicios">

    <TextView
        android:id="@+id/tv_menuEjer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicios"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="55sp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/btn_opCaminata"
        android:layout_width="270dp"
        android:layout_height="61dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#1A546C"
        android:text="Caminata"
        app:layout_constraintTop_toBottomOf="@id/tv_menuEjer"
        tools:layout_editor_absoluteX="73dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_opEstiramientos"
        android:layout_width="270dp"
        android:layout_height="61dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#1A546C"
        android:text="Estiramientos"
        app:layout_constraintTop_toBottomOf="@id/btn_opCaminata"
        tools:layout_editor_absoluteX="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>