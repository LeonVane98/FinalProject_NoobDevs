<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagen_datoUsuario"
    tools:context=".login">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:fontFamily="sans-serif-medium"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_usuarioL"
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="61dp"
        android:layout_marginRight="22dp"
        android:hint="Usuario"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login" />

    <EditText
        android:id="@+id/et_contrasenaL"
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="61dp"
        android:layout_marginRight="22dp"
        android:hint="Contraseña"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_usuarioL"/>

    <Button
        android:id="@+id/btn_inises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#C2BAAB"
        android:text="Iniciar sesión"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_contrasenaL"/>

    <TextView
        android:id="@+id/tv_RegistL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="22dp"
        android:text="No tienes una cuenta?"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_inises" />


</androidx.constraintlayout.widget.ConstraintLayout>




